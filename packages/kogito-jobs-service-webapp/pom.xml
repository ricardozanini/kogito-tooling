<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <parent>
    <groupId>org.apache.kie.sonataflow</groupId>
    <artifactId>kie-tools-packages</artifactId>
    <version>999-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.apache.kie.kogito</groupId>
  <artifactId>kogito-jobs-service-webapp</artifactId>

  <name>KIE Kogito :: Jobs Service Webapp</name>

  <packaging>pom</packaging>

  <properties>
    <java.module.name>org.kie.kogito.jobs-service.webapp</java.module.name>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <inherited>false</inherited>
        <configuration>
          <workingDirectory>../../</workingDirectory>
        </configuration>
        <executions>
          <execution>
            <id>pnpm build:prod</id>
            <goals>
              <goal>pnpm</goal>
            </goals>
            <configuration>
              <skip>${skip.ui.build}</skip>
              <pnpmInheritsProxyConfigFromMaven>false</pnpmInheritsProxyConfigFromMaven>
              <arguments>-F @kie-tools/kogito-jobs-service-webapp... build:prod</arguments>
              <environmentVariables>
                <KIE_TOOLS_BUILD__runTests>false</KIE_TOOLS_BUILD__runTests>
                <KIE_TOOLS_BUILD__runIntegrationTests>false</KIE_TOOLS_BUILD__runIntegrationTests>
                <KOGITO_JOBS_SERVICE_WEBAPP_title>OSL JOBS SERVICE</KOGITO_JOBS_SERVICE_WEBAPP_title>
                <KOGITO_JOBS_SERVICE_WEBAPP_logo>osl-favicon.svg</KOGITO_JOBS_SERVICE_WEBAPP_logo>
                <KOGITO_JOBS_SERVICE_WEBAPP_docLinkHref
                >https://docs.redhat.com/documentation/red_hat_openshift_serverless/1.36/html/serverless_logic/supporting-services#serverless-logic-managing-supporting-services</KOGITO_JOBS_SERVICE_WEBAPP_docLinkHref>
                <KOGITO_JOBS_SERVICE_WEBAPP_docLinkText
                >OSL Jobs Service configuration</KOGITO_JOBS_SERVICE_WEBAPP_docLinkText>
                <SONATAFLOW_JOBS_SERVICE_WEBAPP_docLinkHref
                >https://docs.redhat.com/documentation/red_hat_openshift_serverless/1.36/html/serverless_logic/supporting-services#serverless-logic-job-service</SONATAFLOW_JOBS_SERVICE_WEBAPP_docLinkHref>
                <SONATAFLOW_JOBS_SERVICE_WEBAPP_docLinkText
                >OSL Jobs Service</SONATAFLOW_JOBS_SERVICE_WEBAPP_docLinkText>
              </environmentVariables>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/image-build-zip.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>zip-dist-folder</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
